generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum day_of_week {
  lun
  mar
  mie
  jue
  vie
  sab
  dom
}

model Profesor {
  id     Int     @id @default(autoincrement())
  nombre String  @db.VarChar(100)
  cursos Curso[]

  @@map("profesor")
}

model Asignatura {
  id          Int     @id @default(autoincrement())
  nombre      String  @db.VarChar(100)
  descripcion String? @db.Text
  creditos    Int
  cursos      Curso[]

  @@map("asignatura")
}

model Salon {
  id          Int     @id @default(autoincrement())
  nombre      String  @db.VarChar(100)
  ubicacion   String? @db.VarChar(200)
  capacidad   Int?
  horarios    Horario[]

  @@map("salon")
}

model Curso {
  id            Int        @id @default(autoincrement())
  nrc           String     @db.VarChar(20)
  periodo       String     @db.VarChar(20)
  asignatura_id Int
  profesor_id   Int?
  asignatura    Asignatura @relation(fields: [asignatura_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  profesor      Profesor?  @relation(fields: [profesor_id], references: [id], onDelete: SetNull, onUpdate: Cascade)
  horarios      Horario[]

  @@map("curso")
}

model Horario {
  id              Int         @id @default(autoincrement())
  day             day_of_week
  hora_de_inicio  DateTime?   @db.Time
  hora_final      DateTime?   @db.Time
  curso_id        Int
  salon_id        Int?
  curso           Curso       @relation(fields: [curso_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  salon           Salon?      @relation(fields: [salon_id], references: [id], onDelete: SetNull, onUpdate: Cascade)

  @@map("horario")
}
