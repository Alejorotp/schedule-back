generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum day_of_week {
  lun
  mar
  mie
  jue
  vie
  sab
  dom
}

model Asignatura {
  id           Int     @id @default(autoincrement())
  nombre       String  @db.VarChar(100)
  descripcion  String? @db.Text
  creditos     Int
  departamento String? @db.VarChar(200)
  cursos       Curso[]

  @@map("asignatura")
}

model Curso {
  id            Int        @id @default(autoincrement())
  nrc           String     @db.VarChar(20)
  periodo       String     @db.VarChar(20)
  profesor      String?    @db.VarChar(200)
  salon         String?    @db.VarChar(100)
  asignatura_id Int
  asignatura    Asignatura @relation(fields: [asignatura_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  horarios      Horario[]

  @@map("curso")
}

model Horario {
  id              Int         @id @default(autoincrement())
  day             day_of_week
  hora_de_inicio  String    @db.VarChar(20)
  hora_final      String    @db.VarChar(20)
  curso_id        Int
  curso           Curso       @relation(fields: [curso_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("horario")
}
