generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profesor {
  id     Int     @id @default(autoincrement())
  nombre String  @db.VarChar(100)
  cursos Curso[]

  @@map("profesor")
}

model Asignatura {
  id          Int     @id @default(autoincrement())
  nombre      String  @db.VarChar(100)
  descripcion String? @db.Text
  creditos    Int
  cursos      Curso[]

  @@map("asignatura")
}

model Curso {
  id            Int        @id @default(autoincrement())
  nrc           String     @unique @db.VarChar(20)
  asignatura_id Int
  profesor_id   Int?
  asignatura    Asignatura @relation(fields: [asignatura_id], references: [id], onDelete: Cascade)
  profesor      Profesor?  @relation(fields: [profesor_id], references: [id], onDelete: SetNull)
  horarios      Horario[]

  @@map("curso")
}

model Horario {
  id              Int     @id @default(autoincrement())
  day             String  @db.VarChar(3)
  hora_de_inicio  String? @db.Time
  hora_final      String? @db.Time
  curso_id        Int?
  curso           Curso?  @relation(fields: [curso_id], references: [id], onDelete: Cascade)

  @@map("horario")
}
